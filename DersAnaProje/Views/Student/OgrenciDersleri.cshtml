@model Ogrenci
@{
    ViewData["Title"] = "OgrenciDersleri";
}

<div class="container mt-4">
    <h1 class="text-center">@Model.Ad @Model.Soyad - Aldığı Dersler</h1>
    @if (Model.OgrenciDersler != null && Model.OgrenciDersler.Any())
    {
        <table class="table table-striped table-bordered" style="border: 2px solid blue;">
            <thead class="thead-light" style="background-color: white;">
                <tr class="text-center">
                    <th>Ders Kodu</th>
                    <th>Ders Adı</th>
                    <th>Kredi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ogrDers in Model.OgrenciDersler)
                {
                    <tr>
                        <td>@ogrDers.Ders?.DersKodu</td>
                        <td>@ogrDers.Ders?.DersAd</td>
                        <td>@ogrDers.Ders?.Kredi</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Bu öğrenci henüz herhangi bir ders almamış.</p>
    }
</div>
