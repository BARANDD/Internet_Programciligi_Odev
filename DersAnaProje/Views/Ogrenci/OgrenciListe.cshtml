@model List<InternetProg.Models.Ogrenci>
@{
    ViewData["Title"] = "Öğrenci Listesi";
    ViewData["Desc"] = "Tüm okulda okuyan öğrencilerin listesi";
}

<table class="table table-striped table-hover" style="border: 2px solid blue;">
    <thead class="thead-light" style="background-color: white;">
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Numara</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogr in Model)
        {
            <tr>
                <td>@ogr.Ad</td>
                <td>@ogr.Soyad</td>
                <td>@ogr.Numara</td>
            </tr>
        }
    </tbody>
</table>
